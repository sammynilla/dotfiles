#!/bin/sh
BATTERY="/sys/class/power_supply/BAT0/capacity"
AC_ADAPTER="/sys/class/power_supply/AC/online"
AC_ACTIVE=$(cat $AC_ADAPTER)

if [ -f $BATTERY ]; then
  POWER=$(cat $BATTERY)
  DISPLAY="ðŸ”‹"
  [ $POWER -lt 20 ] && DISPLAY="ðŸª«";
  case $AC_ACTIVE in
    "0") echo " $DISPLAY "    ;;
    "1") echo " $DISPLAYâš¡ "  ;;
  esac
  exit
fi
echo " ðŸ”Œ "
